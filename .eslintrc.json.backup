{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "no-unused-vars": "off",
    "no-console": "off",
    "react-hooks/exhaustive-deps": "off",
    "@next/next/no-html-link-for-pages": "off",
    "@next/next/no-img-element": "off",
    "react/no-unescaped-entities": "off",
    "react/display-name": "off"
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "dist", 
    "build",
    "coverage",
    "*.config.js",
    "**/__tests__/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}