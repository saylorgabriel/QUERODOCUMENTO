# Email Service Configuration
# =========================

# Primary Email Provider (sendgrid, mailgun, smtp, resend)
EMAIL_PRIMARY_PROVIDER="mailhog"

# Default email addresses
EMAIL_FROM="noreply@querodocumento.com.br"
EMAIL_REPLY_TO="contato@querodocumento.com.br"

# SendGrid Configuration
SENDGRID_API_KEY=""
SENDGRID_FROM_NAME="QueroDocumento"

# Mailgun Configuration
MAILGUN_API_KEY=""
MAILGUN_DOMAIN=""
MAILGUN_HOST="api.mailgun.net"  # Use "api.eu.mailgun.net" for EU region
MAILGUN_FROM_NAME="QueroDocumento"

# SMTP Configuration (Generic - works with Gmail, Outlook, etc.)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_SECURE="false"  # true for 465, false for other ports
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM_NAME="QueroDocumento"

# Resend Configuration (Alternative to SendGrid)
RESEND_API_KEY=""
RESEND_FROM_NAME="QueroDocumento"

# MailHog Configuration (Development Only)
EMAIL_USE_MAILHOG="true"  # Enable MailHog in development
MAILHOG_HOST="localhost"
MAILHOG_PORT="1025"  # SMTP port
MAILHOG_FROM_NAME="QueroDocumento (Dev)"

# Email Service Settings
# ======================

# Rate Limiting
EMAIL_RATE_LIMIT_PER_MINUTE="30"
EMAIL_RATE_LIMIT_PER_HOUR="1000"
EMAIL_RATE_LIMIT_PER_DAY="10000"

# Retry Configuration
EMAIL_MAX_RETRY_ATTEMPTS="3"
EMAIL_RETRY_BACKOFF_MULTIPLIER="2"
EMAIL_INITIAL_RETRY_DELAY="1000"

# Queue Configuration
EMAIL_QUEUE_ENABLED="true"
EMAIL_MAX_CONCURRENT="10"
EMAIL_QUEUE_DELAY="100"

# Development Settings
EMAIL_SKIP_SENDING="false"  # Skip sending emails in dev (just log)
EMAIL_LOG_TO_CONSOLE="true"  # Log email details to console

# LGPD Compliance
EMAIL_LOG_EMAILS="true"  # Log all email attempts to database
EMAIL_LOG_RETENTION_DAYS="365"  # Keep email logs for LGPD compliance
EMAIL_TRACK_DELIVERY="true"  # Track delivery status when possible
EMAIL_INCLUDE_UNSUBSCRIBE="false"  # Add unsubscribe links (for marketing emails)

# WhatsApp Business
WHATSAPP_BUSINESS_TOKEN=""
WHATSAPP_PHONE_NUMBER=""

# Application
APP_URL="http://localhost:3009"
NODE_ENV="development"

# Security
JWT_SECRET="your-jwt-secret-here-change-in-production"
